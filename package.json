{
    "name": "thoughtfulcode-app",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=24.0.0",
        "bun": ">=1.3.0"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "check": "biome check .",
        "check:fix": "biome check --write .",
        "format": "biome format --write .",
        "type-check": "tsc --noEmit",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "clean": "bun scripts/clean.mjs",
        "healthcheck": "bun run type-check && bun run check",
        "new:solution": "bun scripts/new-solution.ts",
        "publish:solution": "bun scripts/publish-solution.ts",
        "prepare": "husky"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "clsx": "^2.1.1",
        "gray-matter": "^4.0.3",
        "highlight.js": "^11.11.1",
        "next": "^16.1.3",
        "next-themes": "^0.4.6",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-icons": "^5.5.0",
        "react-markdown": "^10.1.0",
        "rehype-highlight": "^7.0.2",
        "rehype-raw": "^7.0.0",
        "tailwind-merge": "^3.4.0",
        "valibot": "^1.2.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@happy-dom/global-registrator": "^20.3.3",
        "@tailwindcss/postcss": "^4.1.18",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.19.7",
        "@types/react": "^19.2.8",
        "@types/react-dom": "^19.2.3",
        "autoprefixer": "^10.4.23",
        "happy-dom": "^20.3.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,mjs,md}": [
            "biome check --write"
        ]
    }
}
