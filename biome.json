{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80,
        "lineEnding": "lf",
        "formatWithErrors": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useSemanticElements": "warn",
                "noAutofocus": "warn"
            },
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error",
                "noUndeclaredVariables": "error",
                "useExhaustiveDependencies": "warn",
                "useHookAtTopLevel": "error"
            },
            "style": {
                "noNegationElse": "warn",
                "noParameterAssign": "error",
                "useBlockStatements": "off",
                "useCollapsedElseIf": "warn",
                "useConst": "error",
                "useDefaultParameterLast": "warn",
                "useExplicitLengthCheck": "warn",
                "useFragmentSyntax": "warn",
                "useTemplate": "warn"
            },
            "suspicious": {
                "noArrayIndexKey": "warn",
                "noAssignInExpressions": "error",
                "noConsole": "off",
                "noDoubleEquals": "error",
                "noExplicitAny": "warn",
                "noImplicitAnyLet": "error"
            },
            "performance": {
                "noAccumulatingSpread": "warn",
                "noDelete": "warn"
            },
            "complexity": {
                "noExcessiveCognitiveComplexity": "warn",
                "noForEach": "off",
                "noImportantStyles": "off",
                "noUselessFragments": "warn",
                "useFlatMap": "warn",
                "useOptionalChain": "warn",
                "useSimplifiedLogicExpression": "warn"
            },
            "security": {
                "noDangerouslySetInnerHtml": "warn"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "es5",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "bracketSameLine": false
        },
        "globals": [
            "describe",
            "test",
            "expect",
            "beforeEach",
            "afterEach",
            "beforeAll",
            "afterAll",
            "mock"
        ]
    },
    "css": {
        "parser": {
            "cssModules": true,
            "allowWrongLineComments": true,
            "tailwindDirectives": true
        },
        "formatter": {
            "enabled": true
        },
        "linter": {
            "enabled": true
        }
    },
    "overrides": [
        {
            "includes": ["*.mjs"],
            "formatter": {
                "indentStyle": "space",
                "indentWidth": 4
            }
        },
        {
            "includes": ["*.json"],
            "formatter": {
                "lineWidth": 80
            }
        },
        {
            "includes": ["*.md"],
            "formatter": {
                "lineWidth": 100
            }
        }
    ],
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
